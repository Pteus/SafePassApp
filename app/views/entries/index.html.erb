<h1>Entries</h1>

<div class="row">
  <div class="card">
    <div class="card-body">
      <% if @entries.any? %>
        <%= render @entries %><!-- this renders _entry.html.erb partial automagically-->
      <% else %>
        <p>You have no entries yet. <%= link_to "Add an entry", new_entry_path %></p>
      <% end %>
    </div>
  </div>
</div>